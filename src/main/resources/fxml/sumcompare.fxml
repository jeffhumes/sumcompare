<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bofus.sumcompare.gui.SumCompareController"
      spacing="10" styleClass="root">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="SumCompare - Intelligent File Deduplication" styleClass="title">
        <font>
            <Font name="System Bold" size="18"/>
        </font>
    </Label>

    <Separator/>

    <!-- Source Directory -->
    <VBox spacing="5">
        <Label text="Source Directory:" styleClass="label-header"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="sourceTextField" promptText="Select source directory..." 
                      HBox.hgrow="ALWAYS" editable="false"/>
            <Button fx:id="sourceBrowseButton" text="Browse..." onAction="#onSourceBrowse" 
                   minWidth="100"/>
        </HBox>
        <CheckBox fx:id="sourceDuplicateCheckBox" text="Check for duplicates in source only" selected="false"/>
    </VBox>

    <!-- Target Directory -->
    <VBox spacing="5">
        <Label text="Target Directory:" styleClass="label-header"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="targetTextField" promptText="Select target directory..." 
                      HBox.hgrow="ALWAYS" editable="false"/>
            <Button fx:id="targetBrowseButton" text="Browse..." onAction="#onTargetBrowse" 
                   minWidth="100"/>
        </HBox>
    </VBox>

    <!-- Checksum Algorithm -->
    <VBox spacing="5">
        <Label text="Checksum Algorithm:" styleClass="label-header"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ComboBox fx:id="algorithmComboBox" prefWidth="200"/>
            <Label text="Threads:"/>
            <Spinner fx:id="threadCountSpinner" prefWidth="80" editable="true"/>
        </HBox>
    </VBox>

    <!-- Options -->
    <VBox spacing="8">
        <Label text="Options:" styleClass="label-header"/>
        <CheckBox fx:id="dryRunCheckBox" text="Dry Run (preview without copying)" selected="true"/>
        <CheckBox fx:id="keepStructureCheckBox" text="Keep source directory structure"/>
        <CheckBox fx:id="backupCheckBox" text="Backup source first (warning: increases processing time)" selected="true"/>
        <CheckBox fx:id="preserveDateCheckBox" text="Preserve file dates" selected="true"/>
        <CheckBox fx:id="createReportCheckBox" text="Create Excel report"/>
        <CheckBox fx:id="writeLogToFileCheckBox" text="Write detailed log to file" selected="false"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="  " prefWidth="20"/>
            <Label text="Log Directory:" prefWidth="90"/>
            <TextField fx:id="logDirectoryField" promptText="~/.sumcompare/logs" HBox.hgrow="ALWAYS" editable="false"/>
            <Button fx:id="logDirectoryBrowseButton" text="Browse..." onAction="#onBrowseLogDirectory" minWidth="80"/>
        </HBox>
        <CheckBox fx:id="moveFilesCheckBox" text="Move files instead of copying (deletes source after copy)"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="  " prefWidth="20"/>
            <CheckBox fx:id="permanentlyDeleteCheckBox" text="Permanently delete moved files (skip trash)"/>
        </HBox>
        
        <!-- Date-Based Organization -->
        <Separator/>
        <CheckBox fx:id="dateFoldersCheckBox" text="Organize files into date-based folders"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Date Source:" prefWidth="100"/>
            <ComboBox fx:id="dateSourceComboBox" prefWidth="150"/>
            <Label text="Folder Pattern:" prefWidth="100"/>
            <ComboBox fx:id="datePatternComboBox" prefWidth="200"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Date Target Dir:" prefWidth="100"/>
            <TextField fx:id="dateTargetField" promptText="(defaults to source directory)" HBox.hgrow="ALWAYS"/>
            <Button fx:id="dateTargetBrowseButton" text="Browse..." onAction="#onBrowseDateTarget" minWidth="80"/>
        </HBox>
        <CheckBox fx:id="useMetadataCheckBox" text="Use image/video metadata dates when available (falls back to Date Source if no EXIF)"/>
        
        <!-- Duplicate Handling -->
        <Separator/>
        <CheckBox fx:id="renameDuplicatesCheckBox" text="Rename duplicate source files (instead of skipping)"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Duplicate Prefix:" prefWidth="100"/>
            <TextField fx:id="duplicatePrefixField" text="DUPLICATE_FILE_" promptText="DUPLICATE_FILE_" prefWidth="200"/>
        </HBox>
        
        <!-- Cleanup -->
        <Separator/>
        <CheckBox fx:id="deleteEmptyFoldersCheckBox" text="Delete empty folders in source after completion"/>
    </VBox>

    <Separator/>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="startButton" text="Start Comparison" onAction="#onStart" 
               styleClass="primary-button" minWidth="150" defaultButton="true"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel" 
               minWidth="100" disable="true"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="View Additional Logging" onAction="#onViewLog" minWidth="90"/>
        <Button text="Help" onAction="#onHelp" minWidth="80"/>
    </HBox>

    <!-- Progress Area -->
    <VBox spacing="5" VBox.vgrow="ALWAYS">
        <Label text="Progress:" styleClass="label-header"/>
        <ProgressBar fx:id="progressBar" prefWidth="Infinity"/>
        <Label fx:id="statusLabel" text="Ready" styleClass="status-label"/>
        
        <!-- Log Output -->
        <TextArea fx:id="logTextArea" editable="false" wrapText="true" 
                 VBox.vgrow="ALWAYS" styleClass="log-area"
                 promptText="Log output will appear here..."/>
    </VBox>

    <!-- Statistics -->
    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="stats-box">
        <VBox spacing="2" alignment="CENTER">
            <Label text="Files Scanned" styleClass="stat-label"/>
            <Label fx:id="scannedCountLabel" text="0" styleClass="stat-value"/>
        </VBox>
        <Separator orientation="VERTICAL"/>
        <VBox spacing="2" alignment="CENTER">
            <Label text="Files Copied" styleClass="stat-label"/>
            <Label fx:id="copiedCountLabel" text="0" styleClass="stat-value"/>
        </VBox>
        <Separator orientation="VERTICAL"/>
        <VBox spacing="2" alignment="CENTER">
            <Label text="Duplicates Found" styleClass="stat-label"/>
            <Label fx:id="duplicatesCountLabel" text="0" styleClass="stat-value"/>
        </VBox>
        <Separator orientation="VERTICAL"/>
        <VBox spacing="2" alignment="CENTER">
            <Label text="Elapsed Time" styleClass="stat-label"/>
            <Label fx:id="elapsedTimeLabel" text="00:00:00" styleClass="stat-value"/>
        </VBox>
    </HBox>
</VBox>
